generator client {
  provider = "prisma-client-js"
  output   = "../generated/user"
}

datasource db {
  provider = "postgresql"
  url      = env("USER_DATABASE_URL")
}

model User {
  userid       String   @id @default(uuid()) // Postgres では uuid() でOK（アプリ側生成）
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
